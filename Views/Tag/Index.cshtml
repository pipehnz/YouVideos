@model List<Tag>

@if(Model.Count > 0) {
<div class="card">
    <div class="card-body">        
        @if(User.IsInRole("Administrador")) {
            <a class="btn btn-primary" asp-action="Create" asp-controller="Tag">Agregar</a>
            <hr />
        } 
        <table class="table table-striped table-borderless">
            <thead>
                <tr>
                    <th>
                        Tag
                    </th>
                    <th>
                        Información
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tag in Model)
                {
                    <tr>
                        <td>
                            @tag.Descripcion
                        </td>
                        <td>
                            @if(tag.EsVisible) {
                                <span>Este tag está visible</span>
                            } else {
                                <span>Este <strong>no</strong> tag está visible</span>
                            }
                        </td>
                        <td>                            
                            @if(User.IsInRole("Administrador")) {
                                <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-controller="Tag" asp-route-id="@tag.Id">Editar</a>
                            } 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
} else {
<div class="d-flex justify-content-center flex-column align-items-center mt-4">
    <img class="w-25" src="https://image.flaticon.com/icons/svg/1533/1533914.svg" alt="Sin resultados" />
    <h3>No hay <strong>Tags</strong> registrados</h3>
    <div class="divider"></div>
    <a class="btn btn-lg btn-outline-primary" asp-action="Create" asp-controller="Tag">Crear el primero</a>
</div>            
}