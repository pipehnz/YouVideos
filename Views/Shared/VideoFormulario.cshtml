@model Video

<div class="form-group">
    <label>Titulo</label>
    <input asp-for="Titulo" class="form-control" placeholder="¿Cual es el titulo?" />
    <span asp-validation-for="Titulo" class="text-danger"></span>
</div>
<div class="form-group">
    <label>Descripción</label>
    <textarea asp-for="Descripcion" class="form-control" placeholder="Describa brevemente el contenido del video"></textarea>
    <span asp-validation-for="Descripcion" class="text-danger"></span>
</div>
<div class="form-group">
    <label>URL</label>
    <input asp-for="Url" class="form-control" placeholder="URL del video: ej, https://www.youtube.com/watch?v=bmbeBFfiuck" />
    <span asp-validation-for="Url" class="text-danger"></span>
</div>
<div class="form-group">
    <label>Tags</label>
    <select class="form-control js-example-basic-multiple" name="Tags" multiple>
        @foreach (var item in (IList<Tag>)ViewBag.Tags)
        {
            if((!Object.Equals(Model,null) && !Object.Equals(Model.VideoTag,null) && Model.VideoTag.Where(vt => vt.TagId == item.Id).Count() > 0))
            {
                <option value="@item.Id" selected>
                    @item.Descripcion
                </option>
            } else {
                <option value="@item.Id">
                    @item.Descripcion
                </option>
            }            
        }
    </select>
</div>
<div class="form-group">
    <input class="btn btn-primary" type="submit" />
</div>